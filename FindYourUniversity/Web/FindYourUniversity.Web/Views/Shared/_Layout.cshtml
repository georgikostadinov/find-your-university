                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Info", "Index", "CommonInfo", new { area = "UniversityArea" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
